 
    <%= form_for [post, @comment] do |form| %>
      
        <div class="field">
          <%= form.label :content %>
          <%= form.text_area :content, :class=>"form-control" %>
        </div>
      
        <div class="actions">
          <%= form.submit "Comment", :class=>"post btn btn-primary btn-lg btn-block" %>
        </div>
    <% end %>
