 
<% provide(:title, @user.first_name) %>

<div class="row">
  <aside class="col-md-4">
    <%= render 'user' =%>
    <ul class="list-group">
      <li class="list-group-item">Name:  <%= @user.first_name%></li>
      <% if  !@user.date_of_birth.nil?%>
      <li class="list-group-item">Date of birth:  <%= @user.date_of_birth.strftime("%m / %d / %Y")%></li>
      <% end %>
      <% if  !@user.gender.nil?%>
      <li class="list-group-item">Gender:  <%= @user.gender%></li>
      <% end %>
    </ul>  
  </aside>
</div>
<button class='prof btn btn-primary'><%= link_to 'Edit', edit_user_registration_path(@user)%> </button>
